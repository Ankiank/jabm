<?eclipse.ant.import?>
	
<project basedir="." name="jabm-user">

	<property name="version" value="0.8"/>
	
	<target name="jar">
		<jar destfile="dist/jabm-${version}.jar">
		    <fileset dir="bin/"/>
		   	<fileset dir="src/"/>
		    <manifest>
		      <attribute name="Main-Class"
		            value="net.sourceforge.jabm.DesktopSimulationManager"/>
		    </manifest>
		  </jar>
	</target>
	
	<target name="cleandoc">
		<delete dir="doc/javadoc/">
		</delete>
	</target>
	
	<target name="doc" depends="cleandoc">
		<javadoc classpathref="jabm.classpath" author="true" sourcepath="src/"
			 destdir="doc/javadoc/"
			docletpath="/usr/local/java/yworks-uml-doclet-3.0_02-jdk1.5/resources;/usr/local/java/yworks-uml-doclet-3.0_02-jdk1.5/lib/ydoc.jar"
			additionalparam="-umlautogen"
			doclet="ydoc.doclets.YStandard"
			>
		</javadoc>
	</target>
	
	<target name="dist" depends="jar,doc">
		<zip  destfile="../jabm-${version}.zip"
			  basedir="../"
			  includes="jabm/** jabm-examples/**"
			  >
		</zip>
	</target>
	

	
</project>